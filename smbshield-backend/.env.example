# ========================================
# SMBShield API - Environment Configuration
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ========================================
# API Configuration
# ========================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=SMBShield API
DEBUG=True  # Set to False in production!

# ========================================
# Security
# ========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key Protection (optional)
# Set REQUIRE_API_KEY=True to protect all endpoints
REQUIRE_API_KEY=False
API_KEY=your-api-key-for-client-authentication

# ========================================
# AI Configuration
# ========================================
# Currently using Gemini (required)
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic (optional, for future use)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ========================================
# CORS Configuration
# ========================================
# Development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Production (update with your domains)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# ========================================
# Database (Optional - For Future Features)
# ========================================
# Supabase (PostgreSQL)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-supabase-anon-key

# Redis (Rate Limiting)
# REDIS_URL=redis://localhost:6379

# ========================================
# Email (Optional - For Future Features)
# ========================================
# SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# FROM_EMAIL=noreply@yourdomain.com
